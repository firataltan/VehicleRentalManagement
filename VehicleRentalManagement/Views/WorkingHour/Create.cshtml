@model VehicleRentalManagement.Models.WorkingHour
@{
    ViewBag.Title = "Yeni Çalışma Süresi Kaydı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        max-width: 900px;
        margin: 0 auto;
    }
    
    .form-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }
    
    .form-header {
        text-align: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid #e2e8f0;
    }
    
    .form-header h2 {
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }
    
    .form-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        margin: 0 auto 1rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        animation: pulse 2s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .input-group-icon {
        position: relative;
    }
    
    .input-group-icon .form-control,
    .input-group-icon .form-select {
        padding-left: 3rem;
    }
    
    .input-group-icon i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        z-index: 10;
        font-size: 1.1rem;
    }
    
    .time-calculator {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        border-radius: 16px;
        padding: 1.5rem;
        margin-top: 1.5rem;
        border: 2px solid rgba(102, 126, 234, 0.1);
    }
    
    .calc-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .calc-item:last-child {
        border-bottom: none;
        padding-top: 1rem;
        font-size: 1.1rem;
        font-weight: 700;
    }
    
    .calc-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #4a5568;
        font-weight: 600;
    }
    
    .calc-label i {
        font-size: 1.2rem;
    }
    
    .calc-value {
        font-size: 1.3rem;
        font-weight: 700;
        padding: 0.25rem 1rem;
        border-radius: 8px;
    }
    
    .calc-value.active {
        background: linear-gradient(135deg, rgba(72, 187, 120, 0.1) 0%, rgba(56, 178, 172, 0.1) 100%);
        color: #48bb78;
    }
    
    .calc-value.maintenance {
        background: linear-gradient(135deg, rgba(246, 173, 85, 0.1) 0%, rgba(252, 129, 129, 0.1) 100%);
        color: #f6ad55;
    }
    
    .calc-value.idle {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        color: #667eea;
    }
    
    .info-box {
        background: linear-gradient(135deg, rgba(79, 172, 254, 0.1) 0%, rgba(0, 242, 254, 0.1) 100%);
        border-left: 4px solid #4facfe;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .validation-error {
        background: linear-gradient(135deg, rgba(245, 101, 101, 0.1) 0%, rgba(229, 62, 62, 0.1) 100%);
        border-left: 4px solid #f56565;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #c53030;
    }
</style>

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <div class="form-icon">
                <i class="fas fa-clock"></i>
            </div>
            <h2>Yeni Çalışma Süresi Kaydı</h2>
            <p class="text-muted mb-0">Araç çalışma sürelerini kaydedin</p>
        </div>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-error">
                <strong><i class="fas fa-exclamation-triangle me-2"></i>Lütfen aşağıdaki hataları düzeltin:</strong>
                @Html.ValidationSummary(false, "", new { @class = "mt-2 mb-0" })
            </div>
        }
        
        <div class="info-box">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Bilgi:</strong> Haftalık toplam süre 168 saattir (7 gün x 24 saat). 
            Boşta bekleme süresi = 168 - (Aktif Çalışma + Bakım) formülü ile otomatik hesaplanacaktır.
        </div>
        
        <form asp-action="Create" asp-controller="WorkingHour" method="post" class="needs-validation" id="workingHourForm">
            @Html.AntiForgeryToken()
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label class="form-label">Araç</label>
                    <div class="input-group-icon">
                        <i class="fas fa-car"></i>
                        @if (ViewBag.Vehicles != null && ViewBag.Vehicles.Count > 0)
                        {
                            <select name="VehicleId" class="form-select" required>
                                <option value="">Araç seçiniz...</option>
                                @foreach (var vehicle in ViewBag.Vehicles)
                                {
                                    <option value="@vehicle.VehicleId">@vehicle.VehicleName</option>
                                }
                            </select>
                        }
                        else
                        {
                            <select class="form-select" required disabled>
                                <option>Kayıtlı araç bulunamadı</option>
                            </select>
                        }
                    </div>
                    @Html.ValidationMessageFor(m => m.VehicleId, "", new { @class = "text-danger small mt-1 d-block" })
                </div>
                
                <div class="col-md-6 mb-4">
                    <label class="form-label">Tarih</label>
                    <div class="input-group-icon">
                        <i class="fas fa-calendar"></i>
                        @Html.TextBoxFor(m => m.RecordDate, 
                            "{0:yyyy-MM-dd}", 
                            new { @class = "form-control", type = "date", required = "required", max = DateTime.Today.ToString("yyyy-MM-dd") })
                    </div>
                    @Html.ValidationMessageFor(m => m.RecordDate, "", new { @class = "text-danger small mt-1 d-block" })
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label class="form-label">Aktif Çalışma Süresi (saat)</label>
                    <div class="input-group-icon">
                        <i class="fas fa-play-circle"></i>
                        @Html.TextBoxFor(m => m.ActiveWorkingHours, 
                            new { @class = "form-control", type = "number", step = "0.1", 
                                  placeholder = "0.0", id = "activeHours" })
                    </div>
                    @Html.ValidationMessageFor(m => m.ActiveWorkingHours, "", new { @class = "text-danger small mt-1 d-block" })
                    <small class="text-muted">Örnek: 156.5 (haftalık toplam)</small>
                </div>
                
                <div class="col-md-6 mb-4">
                    <label class="form-label">Bakım Süresi (saat)</label>
                    <div class="input-group-icon">
                        <i class="fas fa-tools"></i>
                        @Html.TextBoxFor(m => m.MaintenanceHours, 
                            new { @class = "form-control", type = "number", step = "0.1", 
                                  placeholder = "0.0", id = "maintenanceHours" })
                    </div>
                    @Html.ValidationMessageFor(m => m.MaintenanceHours, "", new { @class = "text-danger small mt-1 d-block" })
                    <small class="text-muted">Örnek: 2.8 (haftalık toplam)</small>
                </div>
            </div>
            
            <div class="time-calculator" id="calculator">
                <h6 class="mb-3"><i class="fas fa-calculator me-2"></i>Otomatik Hesaplama</h6>
                
                <div class="calc-item">
                    <div class="calc-label">
                        <i class="fas fa-play-circle" style="color: #48bb78;"></i>
                        <span>Aktif Çalışma</span>
                    </div>
                    <div class="calc-value active" id="displayActive">0.0 saat</div>
                </div>
                
                <div class="calc-item">
                    <div class="calc-label">
                        <i class="fas fa-tools" style="color: #f6ad55;"></i>
                        <span>Bakım</span>
                    </div>
                    <div class="calc-value maintenance" id="displayMaintenance">0.0 saat</div>
                </div>
                
                <div class="calc-item">
                    <div class="calc-label">
                        <i class="fas fa-pause-circle" style="color: #667eea;"></i>
                        <span>Boşta Bekleme</span>
                    </div>
                    <div class="calc-value idle" id="displayIdle">168.0 saat</div>
                </div>
            </div>
            
            <div class="mb-4 mt-4">
                <label class="form-label">Notlar</label>
                <div class="input-group-icon">
                    <i class="fas fa-sticky-note" style="top: 1.5rem;"></i>
                    @Html.TextAreaFor(m => m.Notes, 
                        new { @class = "form-control", rows = "3", placeholder = "Varsa notlarınızı buraya yazın..." })
                </div>
                @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger small mt-1 d-block" })
            </div>
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section scripts {
<script>
    $(document).ready(function() {
        // Real-time calculation
        function calculateIdleHours() {
            var active = parseFloat($('#activeHours').val()) || 0;
            var maintenance = parseFloat($('#maintenanceHours').val()) || 0;
            var idle = 168 - (active + maintenance);
            
            // Update display
            $('#displayActive').text(active.toFixed(1) + ' saat');
            $('#displayMaintenance').text(maintenance.toFixed(1) + ' saat');
            $('#displayIdle').text(idle.toFixed(1) + ' saat');
            
            // Validation: Check if total exceeds 168 hours
            if (idle < 0) {
                $('#calculator').css('border-color', '#f56565');
                $('#displayIdle').css({
                    'background': 'rgba(245, 101, 101, 0.1)',
                    'color': '#c53030'
                });
            } else {
                $('#calculator').css('border-color', 'rgba(102, 126, 234, 0.1)');
                $('#displayIdle').css({
                    'background': 'linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%)',
                    'color': '#667eea'
                });
            }
        }
        
        // Calculate on input change
        $('#activeHours, #maintenanceHours').on('input', calculateIdleHours);
        
        // Initial calculation
        calculateIdleHours();
        
        // Form validation
        $('#workingHourForm').submit(function(e) {
            var active = parseFloat($('#activeHours').val()) || 0;
            var maintenance = parseFloat($('#maintenanceHours').val()) || 0;
            
            if (active + maintenance > 168) {
                e.preventDefault();
                alert('Hata: Aktif çalışma ve bakım sürelerinin toplamı 168 saati (7x24) geçemez!\n\nGirilen toplam: ' + (active + maintenance).toFixed(1) + ' saat');
                return false;
            }
            
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            
            $(this).addClass('was-validated');
        });
    });
</script>
}