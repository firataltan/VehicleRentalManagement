@model VehicleRentalManagement.Models.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .stat-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.18);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(20px);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .stat-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .stat-card:hover::before {
        opacity: 1;
    }
    
    .stat-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }
    
    .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        animation: float 3s ease-in-out infinite;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }
    
    .stat-icon.purple {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .stat-icon.pink {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }
    
    .stat-icon.blue {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }
    
    .stat-icon.orange {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }
    
    .stat-value {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0.5rem 0;
        line-height: 1;
    }
    
    .stat-label {
        color: #718096;
        font-size: 0.95rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .chart-container {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        position: relative;
        height: 400px;
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: #2d3748;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }
    
    .section-title i {
        margin-right: 1rem;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }
    
    .vehicle-summary-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border: 2px solid rgba(102, 126, 234, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .vehicle-summary-card:hover {
        border-color: #667eea;
        transform: translateX(10px);
        box-shadow: 0 8px 24px rgba(102, 126, 234, 0.2);
    }
    
    .vehicle-name {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }
    
    .vehicle-plate {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }
    
    .progress-group {
        margin-bottom: 1rem;
    }
    
    .progress-label {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-size: 0.85rem;
        color: #4a5568;
        font-weight: 600;
    }
    
    .progress {
        height: 10px;
        border-radius: 10px;
        background: #e2e8f0;
        overflow: hidden;
    }
    
    .progress-bar {
        border-radius: 10px;
        transition: width 1s ease;
        animation: progressAnimation 1.5s ease;
    }
    
    @@keyframes progressAnimation {
        from { width: 0; }
    }
    
    .progress-bar.active {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }
    
    .progress-bar.idle {
        background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);
    }
    
    .progress-bar.maintenance {
        background: linear-gradient(90deg, #fa709a 0%, #fee140 100%);
    }
    
    .recent-records-table {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }
    
    .table-hover tbody tr {
        transition: all 0.3s ease;
    }
    
    .table-hover tbody tr:hover {
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        transform: scale(1.01);
    }
    
    .badge-role {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.75rem;
    }
    
    .badge-admin {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .badge-user {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }
    
    .welcome-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2rem 2.5rem;
        margin-bottom: 2rem;
        margin-top: 1rem;
        color: white;
        box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }
    
    .welcome-banner::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 4s ease-in-out infinite;
    }
    
    .welcome-banner h2 {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }
    
    .welcome-banner p {
        opacity: 0.9;
        font-size: 1.1rem;
    }
</style>

<div class="welcome-banner">
    <h2><i class="fas fa-hand-sparkles me-2"></i>Merhaba, @ViewBag.CurrentUserFullName!</h2>
    <p>Araç Kiralama Yönetim Sistemine hoş geldiniz. Güncel istatistikleriniz aşağıda.</p>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-icon purple">
                <i class="fas fa-car"></i>
            </div>
            <div class="stat-value">@Model.TotalVehicles</div>
            <div class="stat-label">Toplam Araç</div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-icon blue">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-value">@Model.ActiveVehicles</div>
            <div class="stat-label">Aktif Araç</div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-icon orange">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-value">%@Model.AverageActivePercentage.ToString("F1")</div>
            <div class="stat-label">Ort. Aktif Çalışma</div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-icon pink">
                <i class="fas fa-pause-circle"></i>
            </div>
            <div class="stat-value">%@Model.AverageIdlePercentage.ToString("F1")</div>
            <div class="stat-label">Ort. Boşta Bekleme</div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="section-title mb-0">
                    <i class="fas fa-chart-pie"></i>
                    Haftalık Araç Performansı
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="performanceChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="section-title mb-0">
                    <i class="fas fa-list"></i>
                    Araç Özeti
                </h5>
            </div>
            <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                @foreach (var summary in Model.VehicleSummaries)
                {
                    <div class="vehicle-summary-card">
                        <div class="vehicle-name">@summary.VehicleName</div>
                        <span class="vehicle-plate">@summary.LicensePlate</span>
                        
                        <div class="progress-group">
                            <div class="progress-label">
                                <span><i class="fas fa-play-circle me-1"></i>Aktif</span>
                                <strong>%@summary.ActivePercentage.ToString("F1")</strong>
                            </div>
                            <div class="progress">
                                <div class="progress-bar active" role="progressbar" 
                                     style="width: @summary.ActivePercentage%"></div>
                            </div>
                        </div>
                        
                        <div class="progress-group">
                            <div class="progress-label">
                                <span><i class="fas fa-pause-circle me-1"></i>Boşta</span>
                                <strong>%@summary.IdlePercentage.ToString("F1")</strong>
                            </div>
                            <div class="progress">
                                <div class="progress-bar idle" role="progressbar" 
                                     style="width: @summary.IdlePercentage%"></div>
                            </div>
                        </div>
                        
                        <div class="progress-group mb-0">
                            <div class="progress-label">
                                <span><i class="fas fa-tools me-1"></i>Bakım</span>
                                <strong>%@summary.MaintenancePercentage.ToString("F1")</strong>
                            </div>
                            <div class="progress">
                                <div class="progress-bar maintenance" role="progressbar" 
                                     style="width: @summary.MaintenancePercentage%"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="section-title mb-0">
                    <i class="fas fa-clock"></i>
                    Son Kayıtlar
                </h5>
                <a href="@Url.Action("Index", "WorkingHour")" class="btn btn-primary btn-sm">
                    <i class="fas fa-list me-1"></i>Tümünü Gör
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 recent-records-table">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Araç</th>
                                <th>Plaka</th>
                                <th>Aktif (saat)</th>
                                <th>Bakım (saat)</th>
                                <th>Boşta (saat)</th>
                                <th>Kaydeden</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.RecentRecords)
                            {
                                <tr>
                                    <td><strong>@record.RecordDate.ToString("dd.MM.yyyy")</strong></td>
                                    <td>@record.VehicleName</td>
                                    <td><span class="badge badge-primary">@record.LicensePlate</span></td>
                                    <td><i class="fas fa-play-circle text-primary me-1"></i>@record.ActiveWorkingHours.ToString("F1")</td>
                                    <td><i class="fas fa-tools text-warning me-1"></i>@record.MaintenanceHours.ToString("F1")</td>
                                    <td><i class="fas fa-pause-circle text-danger me-1"></i>@record.IdleHours.ToString("F1")</td>
                                    <td>@record.CreatedByName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
<script>
    $(document).ready(function() {
        // Chart Data
        var vehicleNames = [@Html.Raw(string.Join(",", Model.VehicleSummaries.Select(s => "'" + s.VehicleName + "'")))];
        var activeData = [@Html.Raw(string.Join(",", Model.VehicleSummaries.Select(s => s.ActivePercentage.ToString("F2"))))];
        var idleData = [@Html.Raw(string.Join(",", Model.VehicleSummaries.Select(s => s.IdlePercentage.ToString("F2"))))];
        var maintenanceData = [@Html.Raw(string.Join(",", Model.VehicleSummaries.Select(s => s.MaintenancePercentage.ToString("F2"))))];
        
        // Create Chart
        var ctx = document.getElementById('performanceChart').getContext('2d');
        var gradient1 = ctx.createLinearGradient(0, 0, 0, 400);
        gradient1.addColorStop(0, 'rgba(102, 126, 234, 0.8)');
        gradient1.addColorStop(1, 'rgba(118, 75, 162, 0.8)');
        
        var gradient2 = ctx.createLinearGradient(0, 0, 0, 400);
        gradient2.addColorStop(0, 'rgba(240, 147, 251, 0.8)');
        gradient2.addColorStop(1, 'rgba(245, 87, 108, 0.8)');
        
        var gradient3 = ctx.createLinearGradient(0, 0, 0, 400);
        gradient3.addColorStop(0, 'rgba(250, 112, 154, 0.8)');
        gradient3.addColorStop(1, 'rgba(254, 225, 64, 0.8)');
        
        var performanceChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: vehicleNames,
                datasets: [
                    {
                        label: 'Aktif Çalışma (%)',
                        data: activeData,
                        backgroundColor: gradient1,
                        borderColor: '#667eea',
                        borderWidth: 2,
                        borderRadius: 10,
                        borderSkipped: false
                    },
                    {
                        label: 'Boşta Bekleme (%)',
                        data: idleData,
                        backgroundColor: gradient2,
                        borderColor: '#f5576c',
                        borderWidth: 2,
                        borderRadius: 10,
                        borderSkipped: false
                    },
                    {
                        label: 'Bakım (%)',
                        data: maintenanceData,
                        backgroundColor: gradient3,
                        borderColor: '#fa709a',
                        borderWidth: 2,
                        borderRadius: 10,
                        borderSkipped: false
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            usePointStyle: true,
                            padding: 20,
                            font: {
                                size: 13,
                                weight: '600',
                                family: "'Inter', sans-serif"
                            }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        cornerRadius: 8,
                        titleFont: {
                            size: 14,
                            weight: '700'
                        },
                        bodyFont: {
                            size: 13
                        },
                        callbacks: {
                            label: function(context) {
                                return context.dataset.label + ': ' + context.parsed.y.toFixed(1) + '%';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: {
                            callback: function(value) {
                                return value + '%';
                            },
                            font: {
                                size: 12,
                                weight: '600'
                            }
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)',
                            drawBorder: false
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: 12,
                                weight: '600'
                            }
                        },
                        grid: {
                            display: false,
                            drawBorder: false
                        }
                    }
                },
                animation: {
                    duration: 1500,
                    easing: 'easeInOutQuart'
                }
            }
        });
        
        // Animate progress bars
        setTimeout(function() {
            $('.progress-bar').each(function() {
                var width = $(this).css('width');
                $(this).css('width', '0').animate({ width: width }, 1500);
            });
        }, 300);
    });
</script>
}